{
	"name": "backend",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"build": "npx tsc",
		"prestart": "npm run build",
		"start": "node dist/index.js",
		"dev": "npm-run-all -p dev-tsc dev-nodemon",
		"dev-tsc": "npx tsc --noEmit --watch",
		"dev-nodemon": "npx nodemon --watch src --exec tsx src/index.ts",
		"format:fix": "npx prettier --write 'src/**/*.ts'",
		"format:check": "npx prettier --check 'src/**/*.ts'",
		"lint:fix": "npx eslint 'src/**/*.ts' --fix",
		"lint:check": "npx eslint 'src/**/*.ts'",
		"prepare": "if [ \"$PRODUCTION_ENVIRONMENT\" = \"false\" ]; then husky; fi"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run lint:check",
			"npm run format:check"
		]
	},
	"author": "Divya Pankaja Nanda",
	"license": "MIT",
	"dependencies": {
		"axios": "^1.7.7",
		"bcryptjs": "^2.4.3",
		"chalk": "^5.3.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.5.1",
		"morgan": "^1.10.0",
		"redis": "^4.7.0",
		"winston": "^3.14.2",
		"multer": "^1.4.5-lts.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^20.14.11",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^8.0.0",
		"lint-staged": "^15.2.10",
		"nodemon": "^3.1.4",
		"npm-run-all": "^4.1.5",
		"prettier": "3.3.3",
		"rimraf": "^6.0.1",
		"tsx": "^4.16.2",
		"typescript": "^5.5.3",
		"typescript-eslint": "^8.6.0"
	}
}
